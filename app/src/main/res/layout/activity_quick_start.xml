<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_jumper"
    tools:context=".activities.QuickStartActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="'Train Anywhere, Anytime''"
        android:textColor="#555555"
        android:textFontWeight="600"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/quick_NAV_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quick_BTN_start"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="cursive"
        android:gravity="center_vertical|center_horizontal"
        android:text="Quick Start"
        android:textFontWeight="800"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/quick_NAV_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/quick_LBL_customize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Customize your own trainings."
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/quick_NAV_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quick_BTN_start"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/quick_NAV_bottom"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="7dp"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>